<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Farms</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>All Farms</h1>
      <a href="/farms/new" class="btn btn-primary mb-3">New Farm</a>
      <div class="row">
        <% for (let farm of farms) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= farm.name %></h5>
              <p class="card-text">Location: <%= farm.location %></p>
              <p class="card-text">Email: <%= farm.email %></p>
              <% if (farm.products && farm.products.length > 0) { %>
              <p class="card-text">
                Products: <% farm.products.forEach((product, index) => { %> <%=
                product.name %><%= index < farm.products.length - 1 ? ', ' : ''
                %> <% }) %>
              </p>
              <% } %>
              <a href="/farms/<%= farm._id %>" class="btn btn-primary"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeATEFsHoHLcW0oPxkp2iDJVuzaMozEwYise/w2ZApKbDVPCu"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
