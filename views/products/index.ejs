  <body>
    <div class="container">
      <a href="/products"
        ><h1 style="text-transform: capitalize">
          <%= category !== undefined ? category : "Farm" %> Products
        </h1></a
      >
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
          <tr class="clickable-row" data-href="/products/<%= product.id %>">
            <td><%= product.name %></td>
            <td class="price">$<%= product.price.toFixed(2) %></td>
            <td class="category">
              <a href="/products?category=<%= product.category %>"
                ><%= product.category %></a
              >
            </td>
            <td>
              <!-- Delete button -->
              <form
                action="/products/<%= product.id %>?_method=DELETE"
                method="POST"
                class="delete-form"
              >
                <button type="submit" class="delete-btn">Delete</button>
              </form>
              <br />
              <a href="/products/<%= product.id %>/edit" class="edit-btn">
                Edit
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/products/new">Create Product</a>
    </div>
    <script>
      // Add click event listener to all rows for navigation
      document.querySelectorAll(".clickable-row").forEach((row) => {
        row.addEventListener("click", (event) => {
          // Navigate to the product details page
          window.location.href = row.dataset.href;
        });
      });
    </script>
  </body>
